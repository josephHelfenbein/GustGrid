{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Linux Executable",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/renderer.cpp",
                "${workspaceFolder}/src/glad.c",
                "-lglfw",
                "-ldl",
                "-lm",
                "-o",
                "${workspaceFolder}/bin/gustgrid"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
        }
    ]
}