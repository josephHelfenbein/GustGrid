{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CMake Configure",
            "command": "cmake",
            "args": [
                "-B",
                "build/debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CMake Build",
            "command": "cmake",
            "args": [
                "--build",
                "build/debug",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake Configure",
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "CMake Configure Release",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CMake Build Release",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": "CMake Configure Release",
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "CMake Clean",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure + Build",
            "command": "cmake",
            "dependsOn": [
                "CMake Configure",
                "CMake Build"
            ],
            "dependsOrder": "sequence",
            "group": {"group": "build", "isDefault": true},
            "problemMatcher": []
        },
        {
            "label": "CMake Configure + Build Release",
            "command": "cmake",
            "dependsOn": [
                "CMake Configure Release",
                "CMake Build Release"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure Release (MSYS2)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_C_COMPILER=gcc",
                "-DCMAKE_CXX_COMPILER=g++",
                "-DCMAKE_CUDA_HOST_COMPILER=g++",
                "-DCMAKE_CUDA_COMPILER=$CUDA_PATH/bin/nvcc.exe"
            ],
            "options": {
              "cwd": "${workspaceFolder}",
              "env": {
                "MSYSTEM": "MINGW64"
              },
              "shell": {
                "executable": "C:/msys64/usr/bin/bash.exe",
                "args": ["-lc"]
              }
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "CMake Build Release (MSYS2)",
            "command": "cmake",
            "args": [
                "-S", ".",
                "--build",
                "build",
            ],
            "options": {
              "cwd": "${workspaceFolder}",
              "env": {
                "MSYSTEM": "MINGW64"
              },
              "shell": {
                "executable": "C:/msys64/usr/bin/bash.exe",
                "args": ["-lc"]
              }
            },
            "group": "build",
            "dependsOn": "CMake Configure Release (MSYS2)",
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "CMake Build (MSYS2)",
            "command": "cmake",
            "args": [
                "-S", ".",
                "--build",
                "build/debug",
            ],
            "options": {
              "cwd": "${workspaceFolder}",
              "env": {
                "MSYSTEM": "MINGW64"
              },
              "shell": {
                "executable": "C:/msys64/usr/bin/bash.exe",
                "args": ["-lc"]
              }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake Configure Debug (MSYS2)",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake Configure + Build Release (MSYS2)",
            "command": "cmake",
            "dependsOn": [
                "CMake Configure Release (MSYS2)",
                "CMake Build Release (MSYS2)"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure Debug (MSYS2)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build/debug",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_C_COMPILER=gcc",
                "-DCMAKE_CXX_COMPILER=g++",
                "-DCMAKE_CUDA_HOST_COMPILER=g++",
                "-DCMAKE_CUDA_COMPILER=$CUDA_PATH/bin/nvcc.exe"
            ],
            "options": {
              "cwd": "${workspaceFolder}",
              "env": {
                "MSYSTEM": "MINGW64"
              },
              "shell": {
                "executable": "C:/msys64/usr/bin/bash.exe",
                "args": ["-lc"]
              }
            },
            "group": "build"
        },
        {
            "label": "CMake Configure + Build Debug (MSYS2)",
            "command": "cmake",
            "dependsOn": [
                "CMake Configure Debug (MSYS2)",
                "CMake Build (MSYS2)"
            ],
            "dependsOrder": "sequence",
            "group": {"group": "build", "isDefault": true},
            "problemMatcher": []
        }
    ]
}